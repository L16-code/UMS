<% include('../layouts/header.ejs') %>

<h1>dashboard</h1>
<button onclick="document.location='/admin/home'">Back</button>
<table width="50%">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Image</th>
        <th>Is Verified</th>
    </tr>

    <% 
    if(users.length>0){
        for(let i=0;i<users.length;i++){
            %>
            <tr>
                <td><%=users[i].name %></td>
                <td><%=users[i].email %></td>
                <td><%=users[i].mobile %></td>
                <td><img src="/userImages/<%=users[i].image %>" alt="<%=users[i].image %>" height="100px" width="100px"> </td>
                <td><%=users[i].is_verified %></td>
            </tr>
            <%
        }
    }
    else{
        %>
        <tr>
            <td colspan="5">Users Not Found</td>
        </tr>
        <%
    }
    %>
</table>
<% include('../layouts/footer.ejs') %>
